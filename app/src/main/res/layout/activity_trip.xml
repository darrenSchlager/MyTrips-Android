<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.regis.darren.mytrips.TripActivity"
    android:focusableInTouchMode="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tripName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trip Name"
        android:textStyle="bold"
        android:textSize="25dp" />

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewSwitcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   to   "
        android:id="@+id/textView"
        android:textColor="#181818"
        android:layout_below="@+id/tripName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴∵∴"
        android:id="@+id/textView6"
        android:textColor="#FF4C4C4C"
        android:paddingBottom="5dp"
        android:layout_below="@+id/startDate"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/startDate"
        android:onClick="selectStartDate"
        android:textSize="17dp"
        android:layout_below="@+id/tripName"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/endDate"
        android:onClick="selectEndDate"
        android:textSize="17dp"
        android:layout_below="@+id/tripName"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/locationListView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addLocation" />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="+"
        android:id="@+id/addLocation"
        android:onClick="addLocation"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locations"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:textColor="#181818"
        android:textSize="17dp"
        android:layout_alignTop="@+id/addLocation"
        android:layout_toRightOf="@+id/viewSwitcher"
        android:layout_toEndOf="@+id/viewSwitcher"
        android:layout_marginTop="12dp" />

</RelativeLayout>
